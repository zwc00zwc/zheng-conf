##                <a href="javascript:;" onclick="admin_role_reset()" class="btn btn-warning radius"> 重置管理员</a>
##            #end
        </span>
    </div>
    <div class="mt-20">
        <div class="dataTables_wrapper no-footer">
            <table class="table table-border table-bordered table-hover table-bg">
                <thead>
                <tr>
                    <th scope="col" colspan="7">任务列表</th>
                </tr>
                <tr class="text-c">
                    <th width="200">配置id</th>
                    <th width="200">节点id</th>
                    <th width="200">配置键</th>
                    <th width="300">配置值</th>
                    <th width="200">描述</th>
                    <th width="100">修改时间</th>
                    <th width="100">创建时间</th>
                </tr>
                </thead>
                <tbody>
                    #foreach($item in $pageModel.model)
                    <tr class="text-c">
                        <td>$!{item.id}</td>
                        <td>$!{item.nodeId}</td>
                        <td>$!{item.confKey}</td>
                        <td>$!{item.confValue}</td>
                        <td>$!{item.confDesc}</td>
                        <td>$!date.format('yyyy-MM-dd HH:mm:ss',$item.updateTime)</td>
                        <td>$!date.format('yyyy-MM-dd HH:mm:ss',$item.createTime)</td>
                    </tr>
                    #end
                </tbody>
            </table>
            #pagination($pageModel,"/mqlistener/index?1=1")
        </div>
    </div>
</div>

